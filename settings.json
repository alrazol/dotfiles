{
  "[python]": {
    "editor.tabSize": 4
    // "editor.bracketPairColorization.enabled": false,
    // "editor.guides.bracketPairs": false,
  },
  "code-runner.clearPreviousOutput": true,
  "code-runner.executorMap": {
    // "code-runner" extension setup to make use of your active env
    "python": "~/.pyenv/shims/python",
    "ruby": "~/.rbenv/shims/ruby"
  },
  "code-runner.showExecutionMessage": false,
  "cSpell.enableFiletypes": [
    "!python",
    "!ruby",
    "markdown"
  ],
  "cSpell.language": "en, fr",
  "cSpell.userWords": [
    "CHALLENGIFY",
    "dataframe",
    "kompose",
    "lewagon",
    "mkdir",
    "mlops",
    "nbresult",
    "ndarray",
    "pathlib",
    "preprocess",
    "scikit",
    "sklearn",
    "taxifare",
    "tensorflow",
    "termcolor"
  ],
  "editor.acceptSuggestionOnEnter": "on",
  "editor.accessibilitySupport": "off",
  "editor.experimental.pasteActions.enabled": true,
  "editor.fontSize": 13,
  "editor.guides.bracketPairs": false,
  "editor.inlineSuggest.enabled": true,
  "editor.largeFileOptimizations": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestions": {
    "comments": "off",
    "inline": "true",
    "other": "on",
    "strings": "off"
  },
  "editor.renderControlCharacters": true,
  "editor.rulers": [
    80,
    120
  ],
  "editor.showFoldingControls": "always",
  "editor.snippetSuggestions": "bottom",
  "emmet.excludeLanguages": [
    "markdown",
    "yml",
    "yaml"
  ],
  "emmet.includeLanguages": {
    "erb": "html"
  },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.triggerExpansionOnTab": true,
  "explorer.confirmDelete": false,
  "files.associations": {
    "*.sql": "jinja-sql",
    "*.cron": "crontab",
    "crontab": "crontab"
  },
  "files.exclude": {
    "**/home/ftp/": true,
    "**/.zfs/": true,
    "**/run/": true,
    "**/sys/": true,
    "**/dev/": true,
    "**/tmp/": true,
    "**/usr/": true,
    "**/var/": true,
    "**/proc/": true,
    "**/__pycache__": true,
    "**/_site": true,
    "**/*.asset-cache": true,
    "**/*.bundle": true,
    "**/*.DS_Store": true,
    "**/*.egg-info": true,
    "**/*.ipynb_checkpoints": true,
    "**/*.pytest_cache": true,
    "**/*.sass-cache": true,
    "**/*.svn": true,
    "**/*.pyc": true,
    "build": true,
    "coverage": true,
    "dist": true,
    "log": true,
    "node_modules": true,
    "public/packs": true
  },
  "files.hotExit": "off",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": false,
  "files.trimTrailingWhitespace": false,
  "files.watcherExclude": {
    "/": true,
    "**": true,
    "**/*.*": true,
    "**/database/": true,
    "**/.venv/": true,
    "**/__pycache__/": true,
    "**/.egg-info": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/*.csv": true,
    "**/*{.jpg,.png,.gif,.webp,.jpeg}": true,
    "**/audits/**": true,
    "**/coverage/**": true,
    "**/log/**": true,
    "**/node_modules/**": true,
    "**/tmp/**": true,
    "**/vendor/**": true,
  },
  "githubPullRequests.fileListLayout": "tree",
  "githubPullRequests.pullBranch": "never",
  "githubPullRequests.queries": [
    {
      "label": "Waiting For My Review",
      "query": "is:open review-requested:${user}"
    },
    {
      "label": "Assigned To Me",
      "query": "is:open assignee:${user}"
    },
    {
      "label": "Created By Me",
      "query": "is:open author:${user}"
    }
  ],
  "githubPullRequests.terminalLinksHandler": "github",
  "gotoNextPreviousMember.symbolKinds": [
    "class",
    "function",
    "method"
  ],
  "hadolint.cliOptions": [
    "--no-color"
  ],
  "hadolint.hadolintPath": "/usr/local/bin/hadolint",
  "ipynb.experimental.pasteImages.enabled": true,
  "jupyter.askForKernelRestart": false,
  "jupyter.debugJustMyCode": true,
  "jupyter.runStartupCommands": [
    "%load_ext autoreload",
    "%autoreload 2"
  ],
  "liveServer.settings.CustomBrowser": "chrome",
  // Choose the Math expression rendering method here. You can also disable math rendering if you want by choosing 'None'.
  "markdown-preview-enhanced.mathRenderingOption": "MathJax",
  "markdown.marp.mathTypesetting": "mathjax",
  "markdown.preview.fontSize": 13,
  "markdown.preview.lineHeight": 1.4,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "right"
  },
  "notebook.diff.ignoreMetadata": true,
  "notebook.lineNumbers": "on",
  "notebook.markup.fontSize": 13,
  // Path to python interpreter
  //"python.defaultInterpreterPath": "/Users/brunolajoie/.pyenv/versions/3.10.6/envs/lewagon/bin/python",
  // Python formatter & linter
  "python.formatting.provider": "yapf",
  "python.languageServer": "Default",
  "python.linting.enabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.pylintEnabled": false,
  // "python.venvPath": "~/.pyenv",
  // "python.venvFolders": ["~/.pyenv/plugins/pyenv-virtualenv/shims"],
  "python.terminal.activateEnvironment": false,
  //"python.terminal.activateEnvInCurrentTerminal": false,
  "python.testing.unittestEnabled": true, // Enable testing using unittest.
  "redhat.telemetry.enabled": false,
  "ruby.codeCompletion": "rcodetools",
  "ruby.format": false,
  "ruby.intellisense": "rubyLocate",
  "ruby.lint": {
    "rubocop": false
  },
  "search.exclude": {
    // Inherits all glob patterns from the `files.exclude` setting.
    "**/.venv": true,
    "**/*.log": true,
    "**/*.csv": true, // KPLER SPECIFIC
    "**/*.grib": true,
    "**/*.grib2": true,
    "**/*.pyc": true,
    "**/.git": true,
  },
  "search.useIgnoreFiles": false,
  "security.workspace.trust.untrustedFiles": "open",
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.shellIntegration.enabled": true,
  "window.newWindowDimensions": "maximized",
  "window.restoreWindows": "none",
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editorAssociations": {
    "*.html": "default",
    "*.ipynb": "jupyter-notebook"
  },
  "workbench.preferredDarkColorTheme": "Monokai",
  "workbench.preferredLightColorTheme": "Ayu Light Bordered",
  "workbench.settings.openDefaultSettings": true,
  "workbench.settings.useSplitJSON": true,
  "workbench.startupEditor": "newUntitledFile",
  "zenMode.centerLayout": false,
  "zenMode.fullScreen": true,
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path.mac": "/Users/brunolajoie/.vs-kubernetes/tools/helm/darwin-amd64/helm",
    "vs-kubernetes.minikube-show-information-expiration": "2023-08-02T17:19:08.225Z",
    "vscode-kubernetes.kubectl-path.mac": "/Users/brunolajoie/.vs-kubernetes/tools/kubectl/kubectl",
    "vscode-kubernetes.minikube-path.mac": "/Users/brunolajoie/.vs-kubernetes/tools/minikube/darwin-amd64/minikube"
  },
  "terminal.integrated.tabs.defaultIcon": "more",
  "markdown-preview-enhanced.previewTheme": "github-light.css",
  "cSpell.enabled": false,
  "githubPullRequests.createOnPublishBranch": "never",
  "git.openRepositoryInParentFolders": "never",
"editor.unicodeHighlight.ambiguousCharacters": false,
"jupyter.interactiveWindow.textEditor.executeSelection": true,
"excalidraw.theme": "auto",
"github.copilot.enable": {
  "*": true,
  "plaintext": true,
  "markdown": false,
  "scminput": false
},
"workbench.colorTheme": "Ayu Light Bordered",
