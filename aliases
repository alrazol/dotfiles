######## OH MY ZSH ############
# [alias list](https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/git#aliases)

######## HOME MADE ############
# Get External IP / Internet Speed
alias myip="curl https://ipinfo.io/json" # or /ip for plain-text ip
alias speedtest="curl -s https://raw.githubusercontent.com/sivel/speedtest-cli/master/speedtest.py | python -"

# Docker
alias dc='docker-compose'
alias dce='docker-compose exec'

# Jupyter notebook nbconvert (refers to https://github.com/lewagon/data-lectures/wiki/How-to-set-up-a-lecture-edition-environment)
jnbconvert() { ls *.ipynb | entr -r jupyter nbconvert "$1" --to slides --post serve --TemplateExporter.extra_template_basedirs=../templates --template=kitt; }
alias jn='jupyter notebook'
alias lab='jupyter lab'

# EDITORS
alias c='code .'
alias st='subl'
alias stt='subl .'

# LeWagon
alias nbc="nbcleanmeta $@"
alias cha="challengify $@"
alias sb="cd ~/code/sandbox"
alias utils="cd '/Users/brunolajoie/Documents/Google Drive Perso/notes/utils'"
alias serve= python -m SimpleHTTPServer # or 'ruby -run -e httpd . -p 8000'

# Git
alias gbranches='for branch in `git branch | grep -v HEAD`;do echo -e `git show --format="%ci %cr" $branch | head -n 1` \\t$branch; done | sort -r '
alias gdt='git difftool'
alias gdts='git difftool --staged'
alias grss='git restore --staged'
alias gitsweepsquash='git checkout -q master && git for-each-ref refs/heads/ "--format=%(refname:short)" | while read branch; do mergeBase=$(git merge-base master $branch) && [[ $(git cherry master $(git commit-tree $(git rev-parse $branch^{tree}) -p $mergeBase -m _)) == "-"* ]] && git branch -D $branch; done'
alias my_issues="GH_PAGER=cat gh search issues --state open --assignee '@me'"
alias my_prs="GH_PAGER=cat gh search prs --state open --assignee '@me'"

# list PATH in human readable column format
alias path='echo $PATH | tr : \\n'
